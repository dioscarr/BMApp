                <button type="button"class="btn btn-default input-sm" data-bind="click:AddNewEmployee">Add Employee</button>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9  " style="height:inherit;">

               

                    <input type="text" id="" placeholder="Company Name:" class="form-control" autocomplete="off" data-bind="value:CompanyName, valueUpdate:'afterkeydown'" />
                    <br />
                    <input type="text" id="" placeholder="Company Address:" autocomplete="off" class="form-control" data-bind="value:CompanyAddress, valueUpdate:'afterkeydown'" />
                    <br />
                   
                    <button type="button" class="btn btn-default input-sm" data-bind="click:AddCompany">Add Employee</button>
                </div>
           
            </div>        
    </div>
</div>
