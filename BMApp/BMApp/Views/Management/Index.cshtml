        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 BM_header  nopadding">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3  " style="height:inherit;">              
                
                <input type="text" id="" placeholder="Full Name:"class="form-control" autocomplete="off" data-bind="value:AddEmployee, valueUpdate:'afterkeydown'" />
                <br />
                <input type="text" id="" placeholder="Tel:" autocomplete="off" class="form-control" data-bind="value:AddTel, valueUpdate:'afterkeydown'" />
                <br />
                <input type="text" id="" placeholder="Email:" autocomplete="off" class="form-control" data-bind="value:AddEmail, valueUpdate:'afterkeydown'" />
